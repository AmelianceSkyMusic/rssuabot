{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": ["es6"],
		"allowJs": false,
		"rootDir": "./src",
		"noImplicitAny": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*", "node_modules/@types/node"],
	"extends": "./tsconfig.paths.json",
	"exclude": ["*/**/_backup*", "*/**/_legacy*", "*/**/_temp*"]
}
