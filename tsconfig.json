{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		// "rootDir": "./api",
		"outDir": "./build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": false,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
	},
	"include": ["api/**/*", "src/**/*", "node_modules/@types/node"],
	"extends": "./tsconfig.paths.json",
	"exclude": ["*/**/_backup*", "*/**/_legacy*", "*/**/_temp*"]
}
