{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": ["es6"],
		"allowJs": false,
		// "rootDir": "./src",
		"noImplicitAny": true,
		"resolveJsonModule": true
	},
	"tsc-alias": {
		"verbose": false,
		"resolveFullPaths": true,
		"replacers": {
		"exampleReplacer": {
			"enabled": true,
			"file": "./exampleReplacer.js"
		},
		"otherReplacer": {
			"enabled": true,
			"file": "./otherReplacer.js"
		}
		},
		"fileExtensions": {
			"inputGlob": "js,jsx,mjs",
			"outputCheck": ["js", "json", "jsx", "mjs"]
		}
	},
	"include": ["src/**/*", "node_modules/@types/node"],
	"extends": "./tsconfig.paths.json",
	"exclude": ["*/**/_backup*", "*/**/_legacy*", "*/**/_temp*"]
}
