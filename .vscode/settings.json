{
    // hide files and folders in explorer
    "files.exclude": {
        "**/assets": true,
        "**/_Legacy": true,
        "**/node_modules": true,
        ".eslintrc": true,
        ".gitignore": true,
        // ".env": true,
        // "**/others": true,

        // "**/RSS/stage0": true,
        // "**/RSS/stage1/Codewars": true,

        // "**/Templates": true,
        // "**/Tests": true,

        "**/.gitIgnore": true,
        "**/package-lock.json": true,
        // "**/package.json": true,
        "**/README.md": true,
        // "**/test.html": true,
        // "**/test.js": true,
    },
    // hide folders in search
    "search.exclude": {
        "**/node_modules": true
    },

    // format on save eslint
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "eslint.validate": ["javascript"]

}
